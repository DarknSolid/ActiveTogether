@using RazorLib.Utils;
@using static EntityLib.Entities.Enums;
@attribute [Route(RoutingConstants.ABOUT)]
@inject NavigationManager NavigationManager

<MudBreakpointProvider OnBreakpointChanged="OnBreakPointChanged" />

<MudPaper Class="py-5 rounded-t-0" Style="width:100%; color: white; background-color: #00cba6b0; margin-bottom:60px;">

    <MudStack Row=true Justify="Justify.Center" AlignItems=AlignItems.Center Style="width: 100%; max-width:900px;" Spacing=@(_isMobile ? 2 : 10)>

        <MudPaper Elevation="3" Style=@($"height:{_logoSize}px; width:{_logoSize}px; border-radius: 50%; background-color: transparent;")>
            <MudImage ObjectFit="ObjectFit.Contain" Src="@Images.LogoBorderedWhiteBgPng" Style=@($"height:{_logoSize}px; width:{_logoSize}px; border-radius: 50%;") />
        </MudPaper>

        <MudStack Style="height:100%;" AlignItems="AlignItems.Center" Spacing=@(_isMobile ? 1 : 3)>
            <MudText Align="Align.Center" Class="mb-2" Typo="@(_isMobile? Typo.h4 : Typo.h2)" Style="text-shadow: 2px 2px 7px rgba(0,0,0,0.5); width:fit-content"><strong>Active Together</strong></MudText>
            <MudText Typo="@(_isMobile? Typo.body1 : Typo.h5)" Align="Align.Center" Style="text-shadow: 2px 2px 5px rgba(0,0,0,0.4); width:fit-content"><i>Skabt af sportsenthusiaster til sportsenthusiaster</i></MudText>
        </MudStack>
    </MudStack>
</MudPaper>

<MudContainer Class="pb-5 ">

    <MudStack Class="mb-5" Spacing="7">

        <div>
            @*<MudDivider Class="mb-7" />*@
            <MudStack Class="mb-7" Row=true AlignItems="AlignItems.Center" Justify="Justify.Center">
                <MudIcon Size="Size.Large" Icon="@Icons.Material.Filled.TaskAlt" />
                <MudText Align="Align.Center" Typo=@(_isMobile ? Typo.h6 : Typo.h4)>Det kan du nu på Active Together</MudText>
            </MudStack>

            <MudStack Style="width:100%; flex-wrap:wrap" Justify=Justify.Center Row=true>

                <MudPaper @onclick="() =>NavigationManager.NavigateToFeed()" Elevation="3" Style="width:400px;" Class="mud-ripple card-clickable rounded">
                    <MudStack AlignItems=AlignItems.Center Style="width:100%; height:100%;" Spacing="0">

                        <MudStack Row=true Justify=Justify.Center AlignItems="AlignItems.Center" Class="pa-5 pb-0 d-flex align-center" Style="background: linear-gradient(90deg, rgba(255,170,71,1) 10%, rgba(247,2,220,1) 40%, rgba(35,164,247,1) 66%, rgba(23,212,132,1) 90%); width:100%;">
                            <MudIcon Style="color:white;" Size="Size.Large" Icon="@Icons.Material.Filled.Comment" />
                            <MudText Style="color:white; text-shadow: 2px 2px 9px rgba(0,0,0,0.51);" Typo=Typo.h6>Et Socialt Medie</MudText>
                        </MudStack>

                        <MudImage ObjectFit=ObjectFit.Cover Height="200" Style="width:100%;" Src="@Images.RoyaltySocialMedia" />

                        <div class="pa-5">
                            <MudText Align="Align.Center">
                                Active Together er også et socialt medie designet for specielt for os der godt kan lide at dyrke sport og motion og gerne vil møde nye mennesker at dele aktive oplevelser med.
                            </MudText>
                            <MudText Align="Align.Center">Del sjove øjebklikke, tips og spørgsmål og meget mere</MudText>
                            <MudText Align="Align.Center">Active Together gør det er nemt at finde relevante opslag såsom hjælp til træning, helbred, fede oplevelser og meget mere</MudText>
                        </div>

                    </MudStack>
                </MudPaper>

                <MudPaper Elevation="3" @onclick="() =>NavigationManager.NavigateToDiscover(PlaceType.DogInstructor)" Style="height:400px; width:400px;" Class="mud-ripple card-clickable rounded">
                    <MudStack AlignItems=AlignItems.Center Style="width:100%; height:100%;" Spacing="0">

                        <MudStack Row=true Justify=Justify.Center AlignItems="AlignItems.Center" Class="pa-5 pb-0 d-flex align-center" Style="background: linear-gradient(0deg, rgba(232,0,206,1) 0%, rgba(255,0,227,1) 100%); width:100%;">
                            <MudIcon Size=Size.Large Style="color:white;" Icon="@Images.IconWhistleOutlined" />
                            <MudText Style="color:white; text-shadow: 2px 2px 9px rgba(0,0,0,0.51);" Typo=Typo.h6>Træningssteder og matching</MudText>
                        </MudStack>

                        <MudImage ObjectFit=ObjectFit.Cover Height="200" Style="width:100%;" Src="@Images.RoyaltyDogTraining" />

                        <div class="pa-5">
                            <MudText Align="Align.Center">
                                Fokus lige nu er at gøre det nemt og sjovt at finde nogen at træne sammen med.
                            </MudText>
                        </div>

                    </MudStack>
                </MudPaper>

            </MudStack>
        </div>



        <div>
            <MudDivider Class="my-7"/>
            <MudStack Class="mb-7" Row=true AlignItems="AlignItems.Center" Justify="Justify.Center">
                <MudIcon Size="Size.Large" Icon="@Icons.Material.Filled.Signpost" />
                <MudText Align="Align.Center" Typo=@(_isMobile ? Typo.h6 : Typo.h4)>
                    Det kan du snart på Active Together
                </MudText>
            </MudStack>

            <MudStack Justify="Justify.Center" Row="true" Style="flex-wrap:wrap">

                <MudPaper Elevation="1" Style="height:400px; width:400px;">
                    <MudStack AlignItems=AlignItems.Center Style="width:100%; height:100%;" Spacing="0">
                        <MudStack Row=true Justify=Justify.Center AlignItems="AlignItems.Center" Class="pa-5 pb-0 d-flex align-center" Style="background: linear-gradient(0deg, rgb(16 146 215) 0%, rgba(7,156,233,1) 100%); width:100%;">
                            <MudIcon Style="color:white;" Size="Size.Large" Icon="@Icons.Material.Filled.People" />
                            <MudText Typo=Typo.h6 Style="color:white; text-shadow: 2px 2px 9px rgba(0,0,0,0.51);">Social</MudText>
                        </MudStack>

                        <MudImage ObjectFit=ObjectFit.Cover Height="200" Style="width:100%;" Src="@Images.RoyaltyDogSocial" />

                        <div class="pa-5">
                            <MudText Align="Align.Center">Socialt samvær med andre aktive mennesker samt arrangering af små lokale meetups og større sportevents.</MudText>
                        </div>
                    </MudStack>
                </MudPaper>

                <MudPaper Elevation="1" Style="height:400px; width:400px;">
                    <MudStack AlignItems=AlignItems.Center Style="width:100%; height:100%;" Spacing="0">

                        <MudStack Row=true Justify=Justify.Center AlignItems="AlignItems.Center" Class="pa-5 pb-0 d-flex align-center" Style="background: linear-gradient(0deg, rgba(230,32,32,1) 0%, rgba(254,39,39,1) 51%); width:100%;">
                            <MudIcon Size="Size.Large" Style="color:white;" Icon="@Icons.Material.Filled.MedicalServices" />
                            <MudText Typo=Typo.h6 Style="color:white; text-shadow: 2px 2px 9px rgba(0,0,0,0.51);">Hjælp</MudText>
                        </MudStack>

                        <MudImage ObjectFit=ObjectFit.Cover Height="200" Style="width:100%;" Src="@Images.RoyaltyDogCare" />

                        <div class="pa-5">
                            <MudText Align="Align.Center">Få hjælp hvis din du er kommet til skade, enten af andre brugere eller registrerede fysioterapeuter.</MudText>
                        </div>

                    </MudStack>
                </MudPaper>

                <MudPaper Elevation="1" Style="height:400px; width:400px;">
                    <MudStack AlignItems=AlignItems.Center Style="width:100%; height:100%;" Spacing="0">

                        <MudStack Row=true Justify=Justify.Center AlignItems="AlignItems.Center" Class="pa-5 pb-0 d-flex align-center" Style="background: linear-gradient(0deg, rgba(236,155,61,1) 0%, rgba(255,174,79,1) 78%); width:100%;">
                            <MudIcon Style="color:white;" Size="Size.Large" Icon="@Icons.Material.Filled.Handshake" />
                            <MudText Style="color:white; text-shadow: 2px 2px 9px rgba(0,0,0,0.51);" Typo=Typo.h6>Pasning og Pension</MudText>
                        </MudStack>

                        <MudImage ObjectFit=ObjectFit.Cover Height="200" Style="width:100%;" Src="@Images.RoyaltyDogWalk" />

                        <div class="pa-5">
                            <MudText Align="Align.Center">Find en hundepasser/hundepension enten privat eller gennem et firma.</MudText>
                        </div>

                    </MudStack>
                </MudPaper>

                <MudPaper Elevation="1" Style="height:400px; width:400px;">
                    <MudStack AlignItems=AlignItems.Center Style="width:100%; height:100%;" Spacing="0">

                        <MudStack Row=true Justify=Justify.Center AlignItems="AlignItems.Center" Class="pa-5 pb-0 d-flex align-center" Style="background: linear-gradient(0deg, rgba(0,175,120,1) 0%, rgba(0,207,141,1) 100%); width:100%;">
                            <MudIcon Size="Size.Large" Style="color:white;" Icon="@Icons.Material.Filled.Explore" />
                            <MudText Style="color:white; text-shadow: 2px 2px 9px rgba(0,0,0,0.51);" Typo=Typo.h6>Træningssteder</MudText>
                        </MudStack>

                        <MudImage ObjectFit=ObjectFit.Cover Height="200" Style="width:100%;" Src="@Images.RoyaltyDogPark" />

                        <div class="pa-5">
                            <MudText Align="Align.Center">Find steder at træne og tjek ind når du ankommer, og se hvem der ellers er tjekket ind og træn sammen!</MudText>
                        </div>

                    </MudStack>
                </MudPaper>

            </MudStack>
        </div>

        <div>
            <MudDivider Class="my-7"/>
            <MudText Align="@(_isMobile ? Align.Center : Align.Start)" Class="mb-3" Typo=@(_isMobile ? Typo.h6 : Typo.h4)>Active Together - kort fortalt</MudText>
            <MudCard>
                <MudCardContent>
                    <MudStack>

                        <MudText>
                            Active Together er en platform, der faciliterer et socialt netværk og en markedsplads, hvor hundeejere og virksomheder mødes for at hjælpes ad med vores firbenede venner.
                        </MudText>

                        <MudText>
                            Formålet med Active Together er at tjene alle jer hundeejeres behov én gang for alle.
                            Derfor vil Active Together komme til at bestå af flere komponenter, som brugeren kan navigere i.
                        </MudText>

                    </MudStack>
                </MudCardContent>
            </MudCard>
        </div>

        <div>
            <MudDivider Class="my-7" />

            <MudText Class="mb-3" Typo=@(_isMobile ? Typo.h6 : Typo.h4) Align="@(_isMobile ? Align.Center : Align.Start)">Historien om Active Together</MudText>
            <MudCard>
                <MudCardContent>
                    <MudStack>

                        <MudText>
                            Active Together er skabt af Hampus Iversen og Laura Evertsen.
                        </MudText>

                        <MudText>
                            Beskrivelse her!
                        </MudText>



                    </MudStack>
                </MudCardContent>
            </MudCard>
        </div>

        <div>
            <MudDivider Class="my-7" />
            <MudStack Row=true Justify="Justify.SpaceAround" Style="flex-wrap: wrap-reverse;">
                <MudCard>
                    <MudCardContent>
                        <MudText Class="mb-5" Typo="Typo.h6">Kontakt</MudText>


                        <MudStack>

                            <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.Email" />
                                <MudText>
                                    hampus@activetogether.dk
                                </MudText>
                            </MudStack>

                            <MudStack Spacing="1" Row="true" AlignItems="AlignItems.Center">
                                <MudText>
                                    <MudLink Style="display:flex; flex-direction:row; gap:5px;" Href="https://www.linkedin.com/in/hampus-iversen-38372118b/" Target="_blank">
                                        <MudIcon Icon="@(Icons.Custom.Brands.LinkedIn)"></MudIcon>
                                        LinkedIn
                                    </MudLink>
                                </MudText>
                            </MudStack>

                            <MudStack Spacing="1" Row="true" AlignItems="AlignItems.Center">
                                <MudText>
                                    <MudLink Style="display:flex; flex-direction:row; gap:5px;" Href="https://www.facebook.com/groups/996541467708138" Target="_blank">
                                        <MudIcon Icon="@(Icons.Custom.Brands.Facebook)"></MudIcon>
                                        Facebook
                                    </MudLink>
                                </MudText>
                            </MudStack>

                            <MudStack Spacing="1" Row="true" AlignItems="AlignItems.Center">
                                <MudText>
                                    <MudLink Style="display:flex; flex-direction:row; gap:5px;" Href="https://www.instagram.com/doggoworld.official/" Target="_blank">
                                        <MudIcon Icon="@(Icons.Custom.Brands.Instagram)"></MudIcon>
                                        Instagram
                                    </MudLink>
                                </MudText>
                            </MudStack>

                            <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                                <MudIcon Icon="@Icons.Material.Filled.BusinessCenter" />
                                <MudText>
                                    CVR - 43501895
                                </MudText>
                            </MudStack>

                            <MudLink OnClick="NavigationManager.NavigateToCredits">Credits</MudLink>

                            <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                                <MudText>Copyright</MudText>
                                <MudIcon Icon="@Icons.Material.Filled.Copyright" />
                                <MudText>
                                    2022 - @DateTime.UtcNow.Year Alle rettigheder forbeholdt
                                </MudText>
                            </MudStack>


                        </MudStack>

                    </MudCardContent>
                </MudCard>

                <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
                    <MudPaper Elevation="3" Style="height:300px; width:300px; border-radius:50%;">
                        <MudImage Style="height:100%; width:100%; border-radius:50%;" ObjectFit="ObjectFit.Contain" Src="@Images.DoggoWorldAuthorProfileImagePng" />
                    </MudPaper>
                    <MudText Align=Align.Center Typo=Typo.caption>Skaberen af Active Together - Hampus Iversen</MudText>
                </MudStack>
            </MudStack>

        </div>
    </MudStack>

</MudContainer>


@code {
    private bool _isMobile;

    private int _logoSize = 200;

    private void OnBreakPointChanged(Breakpoint b)
    {
        _isMobile = b <= Breakpoint.Sm;
        _logoSize = _isMobile ? 130 : 200;
        StateHasChanged();
    }
}
