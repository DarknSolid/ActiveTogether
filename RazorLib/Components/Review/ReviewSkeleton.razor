@using RazorLib.Models


<MudCard Style="max-height:300px; max-width:500px; width:100%;">
    <MudCardHeader>
        @*Avatar circle*@
        <CardHeaderAvatar>
            <MudSkeleton SkeletonType="SkeletonType.Circle" Width="50px" Height="50px" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            @*Author name*@
            <MudSkeleton Width="43%" Height="30px;" />
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        @*Rating Title and Comment*@
        <MudSkeleton Width="30%" Height="42px;" />
        <MudSkeleton Width="80%" Height="100px;" />
    </MudCardContent>
</MudCard>