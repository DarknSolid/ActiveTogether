
<div style="position: relative; width: 100%; height: 100%;">
    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Style="z-index:1; position:absolute; left:50%; transform: translate(-50%, -50%); width:100%; height:100%; top:50%; background-color: rgba(0,0,0,0.35)">
        <MudIcon Icon="@Icons.Material.Filled.Construction" Color="Color.Warning" />
        <MudText Color="Color.Warning" Typo="Typo.h6">Work-In-Progress</MudText>
    </MudStack>
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
